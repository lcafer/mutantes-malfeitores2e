<?xml version="1.0" encoding="UTF-8"?>
<form name="fieldsLib">
      <template name="TopText">
            <label align="top" text="$(titulo)"/>
            <edit align="client" field="$(campo)" readOnly="$(podeEscrever)" />
      </template>

      <template name="LeftText">
            <label align="left" text="$(titulo)"/>
            <edit field="$(campo)" align="client" readOnly="$(podeEscrever)" />
      </template>

      <template name="Atributo">
            <label align="left" text="$(nomeDoAtributo)"/>
            <TopText titulo="Modificador" campo="$(tagModificadorDoAtributo)" podeEscrever="false"/>
            <TopText titulo="$(totalAtributo)" campo="$(tagTotalAtributo)" podeEscrever="false"/>
            <TopText titulo="$(baseAtributo)" campo="$(tagBaseAtributo)" podeEscrever="true"/>
            <TopText titulo="$(bonusAtributo)" campo="$(tagBonusAtributo)" podeEscrever="true"/>
      </template>
</form>
